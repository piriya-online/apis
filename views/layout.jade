doctype html
html
	head
		title #{title} : 24FIN API
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/jquery.jsonview.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		input#api_url(type='hidden', value=config.url)

		nav.navbar.navbar-default.navbar-fixed-top
			div.container
				div.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') 24FIN API
				div#navbar.navbar-collapse.collapse
					ul.nav.navbar-nav
						li
							a(href='./') Home
						li.dropdown
							a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false') API 
								span.caret
							ul.dropdown-menu(role='menu')
								li
									a(href='/member') Member
								li
									a(href='/shop') Shop
								li
									a(href='/product') Product
								li
									a(href='/order') Order
								li
									a(href='/master') Master
								li
									a(href='/utilities') Utilities
								li
									a(href='/system') System

		div.container
			block content
		script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
		script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js')
		script(src='/javascripts/jquery.jsonview.js')
		script(src='/javascripts/app.js')
		- if (locals.script)
			script(src=script)